<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sucursales">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sucursales"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageTienda1"
                        android:layout_width="140dp"
                        android:layout_height="163dp"
                        tools:srcCompat="@drawable/tienda3" />

                    <TextView
                        android:id="@+id/textTienda1"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tienda chapinero, Calle 45 # 13 - 80. Teléfono: 3214798."
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageTienda2"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@drawable/tienda2" />

                    <TextView
                        android:id="@+id/textTienda2"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tienda centro comercial altamira, Calle 12 # 72 -70.
                        Teléfono: 4589710."
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/imageTienda3"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/tienda1" />

                    <TextView
                        android:id="@+id/textTienda3"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tienda Norte, calle 172 #48-50. Teléfono: 7825500."
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>