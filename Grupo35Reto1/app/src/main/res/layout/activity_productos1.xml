<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Productos"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageS1"
                        android:layout_width="115dp"
                        android:layout_height="170dp"
                        app:srcCompat="@drawable/cha2" />

                    <TextView
                        android:id="@+id/textServicios1"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Esta es una chaqueta con el estilo y confort que buscas para
                        acompañarte en días frescos; es de cuello alto y con elástico en puños.
                        Referencia:206805. Valor: $ 250.000"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageS2"
                        android:layout_width="115dp"
                        android:layout_height="170dp"
                        app:srcCompat="@drawable/cha1" />

                    <TextView
                        android:id="@+id/textServicios2"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Una chaqueta que no puede faltar en tu armario.
                        Complementa casi cualquier look, mientras te mantiene abrigado. Referencia: 199210.
                         Valor: $ 290.000"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="378dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageS3"
                        android:layout_width="115dp"
                        android:layout_height="170dp"
                        app:srcCompat="@drawable/cha3" />

                    <TextView
                        android:id="@+id/textServicios3"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Esta es una chaqueta con el estilo y confort que buscas para
                        acompañarte en días frescos; es de cuello alto y con elástico en puños.
                        Referencia:206805. Valor: $ 250.000"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>